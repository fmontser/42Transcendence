{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./conf/website/dist",
    "rootDir": "./conf/website/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "conf/website/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}